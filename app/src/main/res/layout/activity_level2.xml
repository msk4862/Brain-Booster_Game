<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/brain_levelbg"
    tools:context="gamedevelepors.funcandi.brainbooster.Levels.Level2Activity">


    <gamedevelepors.funcandi.brainbooster.CustomView
        android:id="@+id/custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="70dp"
        android:textColor="#000"
        android:text="Touch the left flip flop"/>


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="70dp"
        android:layout_height="150dp"
        android:background="@drawable/brain_f1"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="70dp"
        android:layout_height="150dp"
        android:background="@drawable/brain_f2"
        android:layout_marginEnd="10dp"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="70dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/brain_f3"
        android:layout_alignTop="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton"
        android:layout_marginStart="10dp" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="70dp"
        android:layout_height="150dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/brain_f1"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_toStartOf="@+id/imageButton1" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
